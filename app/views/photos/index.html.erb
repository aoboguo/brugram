<h1>Welcome to Brugram</h1>

<p>Check out these awesome grams from da brus!</p>

<%= link_to "Add a New Brugram", new_photo_path %>

<div>

<% @photos.each do |photo| %>
	<% if photo.public || current_user == photo.user %>
		<%= link_to "#{image_tag(photo.image)}".html_safe, photo_path(photo), class: "max-width" %>
	<% else %>
		<%= image_tag photo.image, class: "max-width"%> 
	<%end%>
	<p>Caption: <%= photo.caption %></p>
	<p>This brutastic gram was submitted by <%= photo.user.email %></p>

	<% if current_user == photo.user %>
	 <%= link_to 'Edit Photo', edit_photo_path(photo) %>  <%= link_to 'Destroy',  photo,  method: :delete, data: { confirm: 'Are you sure?' } %> 
 	<%end%>
 	<br><hr><br>

<% end %>
</div>